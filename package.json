{
  "name": "product_landing_page",
  "version": "1.0.0",
  "description": "FCC responsive web challenge to create product landing page",
  "main": "src/index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "sass src/sass:src/css --watch --source-map-urls=relative",
    "copy:html": "cpx \"src/**/*.{html,jpg,png,svg}\" public",
    "build:sass": "sass src/sass:public/css --no-source-map",
    "copy": "npm-run-all --parallel copy:*",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all build:* copy:html"
  },
  "keywords": [
    "html",
    "css",
    "scss"
  ],
  "author": "fin-k",
  "license": "ISC",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "cpx2": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "sass": "^1.64.2"
  }
}
